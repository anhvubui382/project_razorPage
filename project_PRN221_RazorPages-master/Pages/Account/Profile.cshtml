@page
@model WebRazor.Pages.Account.ProfileModel

<style>
    /* Add your global styles here */

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
    }

    #content-left {
        background-color: #fff;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h3 {
        font-weight: normal;
        color: #333;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

        ul li {
            padding: 8px 0;
            border-bottom: 1px solid #eee;
        }

    a {
        text-decoration: none;
        color: #3498db;
    }

    #content-right {
        background-color: #fff;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .path {
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .content-main {
        /* Add additional styling if needed */
    }

    #profile-content {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .profile-content-col {
        flex: 1;
        padding: 10px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        margin: 0 10px;
    }

        .profile-content-col input {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .profile-content-col .msg-error {
            color: #e74c3c;
        }

        .profile-content-col .msg-success {
            color: #2ecc71;
        }

    input[type="submit"] {
        background-color: #3498db;
        color: #fff;
        border: none;
        padding: 10px;
        border-radius: 5px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #2980b9;
        }

    h3.welcome {
        font-weight: bold;
        color: #3498db;
        margin-bottom: 15px;
    }
</style>

<div id="content-left">
    <h3 class="welcome">Welcome, @Model.Auth.Email</h3>
    <h3>Account Management</h3>
    <ul>
        <a href="~/Account/Profile">
        <li>Personal information</li>
        </a>
    </ul>
    <h3>My order</h3>
    <ul>
        <a href="~/Order">
        <li>All orders</li>
        </a>
        <a href="#">
        <li>Canceled order</li>
        </a>
    </ul>
</div>

<div id="content-right">
    <form method="post">
        <div class="path">Personal information</div>
        <div class="content-main">
            <div id="profile-content">
                <div class="profile-content-col">
                    <div>
                        Company name: <br />
                        <input type="text" asp-for="Auth.Customer.CompanyName" /><br />
                        <span class="msg-error" asp-validation-for="Auth.Customer.CompanyName"></span><br />
                    </div>
                    <div>
                        Contact name: <br />
                        <input type="text" asp-for="Auth.Customer.ContactName" /><br />
                        <span class="msg-error" asp-validation-for="Auth.Customer.ContactName"></span><br />
                    </div>
                    <div>
                        <input type="submit" value="Edit info" /><br />
                        <span class="msg-error">@ViewData["fail"]</span><br />
                        <span class="msg-success">@ViewData["success"]</span><br />
                    </div>
                </div>
                <div class="profile-content-col">
                    <div>
                        Company title: <br />
                        <input type="text" asp-for="Auth.Customer.ContactTitle" /><br />
                        <span class="msg-error" asp-validation-for="Auth.Customer.ContactTitle"></span><br />
                    </div>
                    <div>
                        Address: <br />
                        <input type="text" asp-for="Auth.Customer.Address" /><br />
                        <span class="msg-error" asp-validation-for="Auth.Customer.Address"></span><br />
                    </div>
                </div>
                <div class="profile-content-col">
                    <div>
                        Email: <br />
                        <input type="text" asp-for="Auth.Email" /><br />
                        <span class="msg-error" asp-validation-for="Auth.Email"></span><br />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
