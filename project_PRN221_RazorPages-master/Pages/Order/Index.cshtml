@page
@model WebRazor.Pages.Order.IndexModel

<style>
    /* Add your global styles here */

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
    }

    #content-left {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h3 {
        font-weight: normal;
        color: #333;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

        ul li {
            padding: 8px 0;
            border-bottom: 1px solid #eee;
        }

    a {
        text-decoration: none;
        color: #3498db;
    }

    #content-right {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .path {
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .content-main {
        /* Add additional styling if needed */
    }

    .profile-order-title {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
    }

    .profile-order-title-left {
        /* Adjust styles as needed */
    }

    .profile-order-title-right {
        /* Adjust styles as needed */
    }

    .profile-order-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .profile-order-content-col1 {
        /* Adjust styles as needed */
    }

    .profile-order-content-col2,
    .profile-order-content-col3,
    .profile-order-content-col4 {
        flex-grow: 1;
        /* Adjust styles as needed */
    }
</style>

<div id="content-left">
    <h3>Welcome</h3>
    <h3>Account Management</h3>
    <ul>
        <a href="~/Account/Profile">
        <li>Personal information</li>
        </a>
    </ul>
    <h3>My order</h3>
    <ul>
        <a href="~/Order">
        <li>All orders</li>
        </a>
        <a href="#">
        <li>Canceled order</li>
        </a>
    </ul>
</div>

<div id="content-right">
    <div class="path">LIST ORDERS</div>
    <div class="content-main">
        <div id="profile-content-order">
            @foreach (var order in Model.Auth.Customer.Orders)
            {
                <div>
                    <div class="profile-order-title">
                        <div class="profile-order-title-left">
                            <div>Order creation date: @order.OrderDate</div>
                            <div>Order: <a href="#">#@order.OrderId</a></div>
                        </div>
                        <div class="profile-order-title-right">
                            <span>Pending</span>
                        </div>
                    </div>

                    @foreach (var item in order.OrderDetails)
                    {
                        <div class="profile-order-content">
                            <div class="profile-order-content-col1">
                                <!-- Placeholder content or additional details can be added here -->
                                <a href="~/Product/Detail/@item.ProductId"><img style="margin:10px" src="data:image/jpeg;base64," width="100%" /></a>

                            </div>
                            <div class="profile-order-content-col2" style="margin-left:50px; font-size:23px; font-weight:bold">@item.Product.ProductName</div>
                            <div class="profile-order-content-col3">Quantity: @item.Quantity</div>
                            <div class="profile-order-content-col4">@item.UnitPrice $</div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
